@page
@model TSAC.Bravo.PhotoContest.Web.Pages.InsertModel
@{
    ViewData["Title"] = "Insert";
}

<div class="text-center">
    <h1 class="display-4">Insert a Photo</h1>
</div>
<br />
<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Title (optional)</label>
                <input asp-for="Photo.Title" class="form-control" />
                <span asp-validation-for="Photo.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Description (optional)</label>
                <input asp-for="Photo.Description" class="form-control" />
                <span asp-validation-for="Photo.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Image</label>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="customFile" asp-for="Photo.Image">
                    <label class="custom-file-label" for="customFile">Choose an Image</label>
                    <span asp-validation-for="Photo.Image" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Insert a Photo" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
