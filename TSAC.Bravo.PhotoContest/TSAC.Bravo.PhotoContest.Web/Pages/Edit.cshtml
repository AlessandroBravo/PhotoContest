@page

@model TSAC.Bravo.PhotoContest.Web.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">
    <h1 class="display-4">Edit Photo</h1>
</div>
<br />
<div class="row">
    <div class="col-md-4">
        @if (Model.photo.ThumbnailUrl != null)
        {
            <img src="@Model.photo.ThumbnailUrl" height="300" width="400" />
        }
        else
        {
            <img src="@Model.photo.Url" height="300" width="400" />
        }
    </div>
    <div class="col-md-6 offset-2">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="photo.Id" />
            <div class="form-group">
                <label asp-for="photo.Title" class="control-label"></label>
                <input asp-for="photo.Title" class="form-control" />
                <span asp-validation-for="photo.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="photo.Description" class="control-label"></label>
                <input asp-for="photo.Description" class="form-control" />
                <span asp-validation-for="photo.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
